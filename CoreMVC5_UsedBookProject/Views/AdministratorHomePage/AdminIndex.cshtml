<div style="display:flex;">
    <div style="width: 35%;">
    </div>
    <div class="content">
            <form action="~/AdministratorHomePage/UploadImage" method="post" enctype="multipart/form-data">
            <div style="display:flex; display:flex; justify-content:space-evenly;">
                    <div>
                        <input type="hidden" name="Image1" class="form-control" value="@(Model.Image1 == null ? "無圖片" : Model.Image1)" id="Image1" readonly />
                    <button type="button" class="delete" id="Image1-clear" style="width:200px; text-align:center;">移除當前照片</button>
                        <div id="img1Div" class="mb-3 p-2 d-flex align-items-center" style="width: 100%; aspect-ratio: 1 / 1; max-width: 200px; background-color: white; background: white; border: 1px solid black;">
                            <img src="" alt="img1" id="img1" onerror="this.onerror='';this.src='/DeafultPictures/DeafultBookPicture.jpg'">
                        </div>
                    <div class="d-flex" style="width:200px; justify-content:space-evenly;">
                        <label for="file1" style="cursor:pointer;padding:10px;border-radius: 5px; background-color:#0000cd;color:white; height:52px;  white-space: nowrap;">
                                選擇照片
                            </label>
                            <input type="file" asp-for="File1" class="d-none" accept="image/*" id="file1" />
                        <div id="p-file1" style="max-height:60px; height:60px;padding:10px;">未選擇照片</div>
                        </div>
                        <span asp-validation-for="File1" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="hidden" name="Image2" class="form-control" value="@(Model.Image2 == null ? "無圖片" : Model.Image2)" id="Image2" readonly />
                    <button type="button" class="delete" id="Image2-clear" style="width:200px; text-align:center;">移除當前照片</button>
                        <div id="img2Div" class="mb-3 p-2 d-flex align-items-center" style="width: 100%; aspect-ratio: 1 / 1; max-width: 200px; background-color: white; background: white; border: 1px solid black;">
                            <img src="" alt="img1" id="img1" onerror="this.onerror='';this.src='/DeafultPictures/DeafultBookPicture.jpg'">
                        </div>
                    <div class="d-flex" style="width:200px; justify-content:space-evenly;">
                        <label for="file2" style="cursor:pointer;padding:10px;border-radius: 5px; background-color:#0000cd;color:white; height:52px; white-space: nowrap;">
                            選擇照片
                            </label>
                            <input type="file" asp-for="File2" class="d-none" accept="image/*" id="file2" />
                        <div id="p-file2" style="height:60px; padding:10px;">未選擇照片</div>
                        </div>
                        <span asp-validation-for="File2" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="hidden" name="Image3" class="form-control" value="@(Model.Image3 == null ? "無圖片" : Model.Image3)" id="Image3" readonly />
                    <button type="button" class="delete" id="Image3-clear" style="width:200px; text-align:center;">移除當前照片</button>
                        <div id="img3Div" class="mb-3 p-2 d-flex align-items-center" style="width: 100%; aspect-ratio: 1 / 1; max-width: 200px; background-color: white; background: white; border: 1px solid black;">
                            <img src="" alt="img1" id="img1" onerror="this.onerror='';this.src='/DeafultPictures/DeafultBookPicture.jpg'">
                        </div>
                    <div class="d-flex" style="width:200px; justify-content:space-evenly;">
                        <label for="file3" style="cursor:pointer;padding:10px;border-radius: 5px; background-color:#0000cd;color:white; height:52px; white-space: nowrap;">
                            選擇照片
                            </label>
                            <input type="file" asp-for="File3" class="d-none" accept="image/*" id="file3" />
                        <div id="p-file3" style="height:60px;padding:10px;">未選擇照片</div>
                        </div>
                        <span asp-validation-for="File3" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" name="Id" class="form-control" id="Id" value="@Model.Id" readonly />
                <button type="submit" class="return" style="margin:20px 0;">保存圖片</button>
            </form>
        <h4 class="alert alert-danger" style="width:800px; text-align:center;margin:20px 0;">更改文字預覽區</h4>
        <div style="display: flex;">
            <dl class="row">
                <dd class="col-sm">@Html.DisplayFor(m => m.TextValue)</dd>
            </dl>
        </div>
        <div>
            <a asp-controller="AdministratorHomePage" asp-action="EditHomeText" asp-route-id="@Model.Id" class="edit">編輯文字介紹</a>
            <form action="/Home/Index" method="GET">
                <button type="submit" class="return" style="margin:20px 0;">保存</button>
            </form>
        </div>
    </div>
</div>
@section topCSS{
    <style>
        img {
            width: 100%;
            object-fit: contain;
            max-width: 100%;
            max-height: 100%;
        }
    </style>
}
@section endJS{
