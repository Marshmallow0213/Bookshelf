@model CoreMVC5_UsedBookProject.ViewModels.TextboxViewModel
@{
    ViewData["Title"] = "主頁面更新";
}
<style>
    .return {
        padding: 10px;
        text-decoration: none;
        color: white;
        background-color: blue;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
    }

        .return:hover {
            text-decoration: none;
            color: blue;
            background-color: white;
            border: 1px blue solid;
        }

    .edit {
        padding: 10px;
        text-decoration: none;
        color: white;
        background-color: #66cdaa;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
    }

        .edit:hover {
            text-decoration: none;
            color: #66cdaa;
            background-color: white;
            border: 1px #66cdaa solid;
        }

    .delete {
        padding: 5px;
        text-decoration: none;
        color: white;
        background-color: red;
        margin-bottom:5px;
        transition: 0.7s;
        border-radius: 5px;
        height: 52px;
        border: 0;
    }

        .delete:hover {
            text-decoration: none;
            color: red;
            background-color: white;
            border: 1px red solid;
        }
</style>

