@model CoreMVC5_UsedBookProject.Models.Textbox

@{
    ViewData["Title"] = "主頁面介紹區編輯";
}
<style>
    .return {
        padding: 10px;
        text-decoration: none;
        color: white;
        background-color: blue;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
    }

        .return:hover {
            text-decoration: none;
            color: blue;
            background-color: white;
            border: 1px blue solid;
        }
</style>
<h1>主頁面介紹區編輯</h1>

<hr />
<div class="row">
    <div class="col-md-4" style="width:1000px;">
        <form asp-action="EditHomeText">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width:1000px;">
                <textarea asp-for="TextValue" class="form-control" style="height:400px; width:;1000px"></textarea>
                <span asp-validation-for="TextValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="return" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="AdministratorHomePage" asp-action="AdminIndex" class="return">回到上一頁</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
