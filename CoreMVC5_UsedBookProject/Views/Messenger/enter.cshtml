@using CoreMVC5_UsedBookProject.Models;
@model IEnumerable<announcement>

@{
    ViewData["Title"] = "Send Message";
    var userName = Context.User.Identity.Name; // Retrieve the currently logged-in user's name
}
<link href="~/css/datachange.css" rel="stylesheet" />
<style>
    .content, .content * {
        font-family: 標楷體;
    }

        .content table td, .content table th {
            font-size: 20px;
            font-weight: normal;
        }

    .list {
        background-color: #FADFB7;
        padding: 1.3rem 0.75rem;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        font-size:25px;
    }

        .list:hover {
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }
</style>

    <div class="content" style=" margin:5px 30px 0 30px;">
        <table class="table table-striped table-bordered table-hover">
            <thead style="font-size:25px; font-weight:bold;">
                <tr style="text-align:center;">
                <th colspan="5" class="text-center btn-info" style="background-color:#A3998E; color:white;">公告列表</th>
                </tr>
                <tr style="text-align:center;">
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Message)</th>
                <th style="width:500px;">資料變更</th>
                    <th style="width:400px;">@Html.DisplayNameFor(m => m.FirstOrDefault().CreatedAt)</th>
                </tr>
            </thead>
            <tbody style="font-size:20px;">
                @foreach (var item in Model)
                {
                    <tr style="text-align:center;height:40px;">
                    <td>@item.Message</td>
                        <td style="overflow:hidden; display:flex; flex-wrap:wrap; justify-content:space-evenly; gap:15px; width:500px;">
                        <a asp-action="enterEdit" asp-route-id="@item.Id" class="btnadmin" style="font-weight:normal;width:140px;height:40px;background-color:#D1F0D4;text-decoration:none;color:black;">編輯</a>
                        <a asp-action="enterDelete" asp-route-id="@item.Id" class="btnadmin" style="font-weight:normal;width:140px;height:40px;background-color:#DAD1F0;text-decoration:none;color:black;">刪除</a>
                    </td>
                    <td>@item.CreatedAt</td>
                    </tr>
                }
            </tbody>
        <a asp-action="enterCreate" class="btn createtext table list">新增公告</a>
        </table>
    </div>