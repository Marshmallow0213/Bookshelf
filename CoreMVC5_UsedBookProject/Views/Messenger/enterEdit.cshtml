@model CoreMVC5_UsedBookProject.Models.announcement

@{
    ViewData["Title"] = "公告編輯";
}
<style>
    .return {
        padding: 10px;
        text-decoration: none;
        color: black;
        background-color: #D1F0D4;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        font-size: 25px;
    }

        .return:hover {
            color: black;
            text-decoration: none;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }

    .edit {
        padding: 10px;
        text-decoration: none;
        color: black;
        background-color: #DAD1F0;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        font-size: 25px;
    }

        .edit:hover {
            color: black;
            text-decoration: none;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }
</style>
<h1>管理員資料編輯</h1>

<h4>管理員個人資料</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="enterCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:flex; flex-direction:column;  gap:10px;">
                <div style="display:flex;display:none;">
                    <label asp-for="Id" class="control-label" style="width:30%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Id" readonly class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="Message" class="control-label" style="width:30%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Message" class="form-control" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="CreatedAt" class="control-label" style="width:30%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="保存" class="return" />
                </div>
            </div>
        </form>
    </div>
</div>

<div style="margin-top:10px">
    <a asp-controller="Messenger" asp-action="enter" class="edit">返回公告設定</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
