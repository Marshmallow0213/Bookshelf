@using CoreMVC5_UsedBookProject.ViewModels;
@model Textbox

@{
    ViewData["Title"] = "文字介紹區左側";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="max-height: 500px;">
        <div class="carousel-item active">
            <img src="../Images/Home/@ViewBag.Imgs[0]" asp-append-version="true" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="../Images/Home/@ViewBag.Imgs[1]" asp-append-version="true" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="../Images/Home/@ViewBag.Imgs[2]" asp-append-version="true" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(t => t.TextValue)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(t => t.TextValue)</dd>
    </dl>
</div>
