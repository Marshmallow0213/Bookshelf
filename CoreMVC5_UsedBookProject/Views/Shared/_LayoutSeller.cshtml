<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 二手書平台</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css">
    <link href="~/css/seller/topbtn.css" rel="stylesheet" />
    <link href="~/css/seller/modifiedpage.css" rel="stylesheet" />
    @RenderSection("topCSS",required:false)
    @RenderSection("topJS", required: false)
</head>
<body>
    <header>
        <partial name="_NavbarPartial"></partial>
    </header>
    <button onclick="topFunction()" id="topBtn" title="Go to top">Top</button>
    <noscript>
        <h1 class="text-center">此網頁需要支援 JavaScript 才能正確運行，請先至你的瀏覽器設定中開啟 JavaScript。</h1>
        <style>
            main {
                display: none;
            }
        </style>
    </noscript>
    
    <div class="d-flex" style="position: relative;">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Seller"))
        {
            <div class="px-3" id="drop-login-status" style="max-height: 0px; height: fit-content; position: absolute; top: 0px; right: 0px; overflow: hidden; background-color: white; z-index: 1; transition: .5s; border-left: 1px solid black;">
                <p class="px-1 mb-0 py-3" id="nickname" style="border-bottom: 1px solid black; font-size: 20px;">@User.Claims.FirstOrDefault(c => c.Type.Contains("email")).Value</p>
                <a href="@Url.Action("Details", "Account")" class="px-1 text-dark me-2 d-block py-3" style="border-bottom: 1px solid black; font-size: 20px;"><i class="bi bi-gear"></i> 設定</a>
                <a href="@Url.Action("SignOut", "Account")" class="px-1 text-dark d-block py-3" style="font-size: 20px;"><i class="bi bi-box-arrow-right"></i> 登出</a>
            </div>
        }
        <partial name="_SellerAsidePartial"></partial>
        <main role="main" class="p-2 container flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CoreMVC5_UsedBookProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/seller/topbtn.js"></script>
    <script src="~/js/seller/shownickname.js"></script>
    <script src="~/js/seller/focus.js"></script>
</body>
</html>
