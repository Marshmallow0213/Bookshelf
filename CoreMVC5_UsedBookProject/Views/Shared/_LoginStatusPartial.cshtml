@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Seller"))
    {
        @*已登入*@
        //顯示使用者名稱+登出按鈕
        <div class="d-block">
            <div id="hamber">
                <a class="btn no-hide" id="login-btn" href="#">
                    <i class="bi bi-file-person-fill"></i> 個人資訊
                </a>
            </div>
            <div style="position: relative;">
                <div class="login-menu">
                    <div id="login-status">
                        <p class="mb-0 p-3 text-center account-p no-hide" id="nickname">@User.Claims.FirstOrDefault(c => c.Type.Contains("email")).Value</p>
                        <a href="@Url.Action("Details", "SellerAccount")" class="d-block p-3 account-a text-decoration-none"><i class="bi bi-gear"></i> 設定</a>
                        <a href="@Url.Action("SignOut", "SellerAccount")" class="d-block p-3 account-a text-decoration-none"><i class="bi bi-box-arrow-right"></i> 登出</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <a href="@Url.Action("SignOut", "SellerAccount")" class="p-1 account-a text-decoration-none"><i class="bi bi-box-arrow-right"></i> 登出</a>
    }
}
else
{
    @*未登入*@
    //登入按鈕+註冊
    <a href="@Url.Action("Login", "SellerAccount")" class="p-1 account-a text-decoration-none">登入</a>
    <a href="@Url.Action("RegisterUserName", "SellerAccount")" class="p-1 account-a text-decoration-none">註冊</a>
}
