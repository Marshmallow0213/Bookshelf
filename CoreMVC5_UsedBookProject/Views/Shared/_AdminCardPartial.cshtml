@model IEnumerable<CoreMVC5_UsedBookProject.Models.ApplicationUser>

@foreach (var Users in Model)
{
    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                @{
                    string email = User.Identity.Name;
                    string[] segmentation = email.Split('@');
                    string username = segmentation[0];
                    string fullName = $"{Users.Name} ({username})";
                }
                <h5 class="card-title">@fullName</h5>
                <p class="card-text">@Users.Nickname</p>
                <p class="card-text">@Users.Email</p>
                <p class="card-text">@Users.PhoneNo</p>
            </div>
        </div>
    </div>
}