@using CoreMVC5_UsedBookProject.ViewModels;
@model ProductViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "商品詳情";
}
<div class="container-fluid">
    <h1>商品詳情</h1>
    <partial name="~/Views/Seller/DetailsTablePartial/Swiper.cshtml" />
    <partial name="~/Views/Seller/DetailsTablePartial/ProductInformation.cshtml" />
    <partial name="~/Views/Seller/DetailsTablePartial/SaleInformation.cshtml" />
    <partial name="~/Views/Seller/DetailsTablePartial/OtherInformation.cshtml" />
    <input type="hidden" name="ProductId" class="form-control" value="@Model.ProductId" readonly />
</div>
@section topCSS{
    <link href="~/css/Seller/DetailsTablePartial.css" asp-append-version="true" rel="stylesheet" />

    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="~/lib/Swiper/swiper-bundle.min.css" />
    <!-- Demo styles -->
    <link rel="stylesheet" href="~/css/Swiper/Swiper.css" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section endJS{
    <!-- Swiper JS -->
    <script src="~/lib//Swiper/swiper-bundle.min.js"></script>
    <!-- Initialize Swiper -->
    <script src="~/js/Swiper/Swiper.js"></script>
    <script src="~/js/Seller/DetailsTablePartial.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
}