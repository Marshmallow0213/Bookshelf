﻿@using CoreMVC5_UsedBookProject.ViewModels;
@model MyProductsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h1>賣場@(ViewBag.Trade == "以物易物" ? "(以物易物)" : "(買賣)")</h1>
    <p>@ViewBag.Count</p>
    <div class="row py-2">
        @if (Model.Products.Count > 0)
        {
            @foreach (var item in Model.Products)
            {
                <div class="col-12 col-sm-6 col-xl-4">
                    <div class="card p-2 m-auto" style="width: 100%;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                        <div class="m-auto d-flex align-items-center" style="width: 100%; aspect-ratio: 1 / 1; background-color: white; max-width: 200px;">
                            <a href="@Url.Action("Details", "Home", new {ProductId=@item.ProductId})" style="width: 100%; aspect-ratio: 1 / 1; background-color: white; max-width: 200px;"><img src="../Images/Products/@item.ProductId/@item.Image1" class="m-auto w-100" alt="@item.Title" onerror="errorLoad(this)" /></a>
                        </div>
                        @if (item.Trade == "金錢")
                        {
                            <table class="container-fluid my-2">
                                <tr><td>@Html.DisplayNameFor(model => model.Product.Title)</td><td>@item.Title</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.ISBN)</td><td>@item.ISBN</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.Author)</td><td>@item.Author</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.Trade)</td><td>@item.Trade</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.UnitPrice)</td><td>@(decimal.Round(item.UnitPrice, 0) == 0 ? "" : decimal.Round(item.UnitPrice, 0))</td></tr>
                            </table>
                        }
                        else if (item.Trade == "以物易物")
                        {
                            <table class="container-fluid my-2">
                                <tr><td>@Html.DisplayNameFor(model => model.Product.Title)</td><td>@item.Title</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.ISBN)</td><td>@item.ISBN</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.Author)</td><td>@item.Author</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.Trade)</td><td>@item.Trade</td></tr>
                                <tr><td>@Html.DisplayNameFor(model => model.Product.ContentText)</td><td>@item.ContentText</td></tr>
                            </table>
                        }

                    </div>
                </div>
            }
        }
        else
        {
            <h2 class="text-center my-5 w-100">沒有上架的商品</h2>
        }
    </div>
</div>
<partial name="_NowPageMyProductsPartial" />

@section topCSS{
    <link href="~/css/seller/myproducts.css" rel="stylesheet" />
}