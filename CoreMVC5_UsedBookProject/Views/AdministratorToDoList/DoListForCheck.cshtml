@using CoreMVC5_UsedBookProject.ViewModels;
@model IEnumerable<ToDoListViewModels>
@{
    ViewData["Title"] = "待辦清單";
}
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr style="text-align:center;">
            <th colspan="5" class="text-center btn-info">待辦清單</th>
        </tr>
        <tr style="text-align:center;">
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Id)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Maintitle)</th>
            <th>資料變更</th>
            <th>完成度</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center; width:778px;height:40px;">
                <td>@item.Id</td>
                <td>@item.Maintitle</td>
                <td style="overflow:hidden; display:flex; flex-wrap:wrap; justify-content:space-evenly; gap:5px;">
                    <a asp-action="DoListEdit" asp-route-id="@item.Id" class="btnadmin" style="width:100px;height:40px;background-color:blue; text-decoration:none; color:white;">編輯</a>
                    <a asp-action="DoListDetail" asp-route-id="@item.Id" class="btnadmin" style="width:140px;height:40px;background-color:#2e8b57;text-decoration:none;color:white;">詳細資料</a>
                    <a asp-action="DoListDelete" asp-route-id="@item.Id" class="btnadmin" style="width:100px;height:40px;background-color:red;text-decoration:none;color:white;">刪除</a>
                    <a asp-action="AdministratorSuspension" asp-route-id="@item.Id" class="btnadmin" style="width:140px;height:40px;background-color:gray;text-decoration:none;color:white;">確認完成</a>
                </td>

                <td>@item.RoleName</td>
            </tr>
        }
    </tbody>
    <a asp-action="DoListCreate" class="btn btn-warning createtext table">新增待辦事項</a>
</table>