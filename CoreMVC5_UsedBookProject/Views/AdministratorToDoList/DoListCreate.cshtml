@model CoreMVC5_UsedBookProject.Models.Adminlist

@{
    ViewData["Title"] = "待辦事項建立";
}
<link href="~/css/buttons.css" rel="stylesheet" />
<style>
    .return {
        padding: 10px;
        text-decoration: none;
        color: black;
        background-color: #D1F0D4;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        font-size: 25px;
    }

        .return:hover {
            color: black;
            text-decoration: none;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }

    .edit {
        padding: 10px;
        text-decoration: none;
        color: black;
        background-color: #DAD1F0;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        font-size: 25px;
    }

        .edit:hover {
            color: black;
            text-decoration: none;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }
</style>

<h1>新增待辦事項</h1>

<h4>待辦事項</h4>
<hr />
<div class="row" style="flex-direction:column;">
    <div class="col-md-4">
        <form asp-action="DoListCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:flex; flex-direction:column;  gap:10px;">
                <div style="display:flex;">
                    <label asp-for="Date" class="control-label" style="width:30%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Date" class="form-control" required />
                    <span asp-validation-for="Date" class="field-error"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="Maintitle" class="control-label" style="width:30%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Maintitle" class="form-control" required />
                    <span asp-validation-for="Maintitle" class="field-error"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="Subtitle" class="control-label" style="width:30%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Subtitle" class="form-control" required />
                    <span asp-validation-for="Subtitle" class="field-error"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="建立" class="return">
            </div>
        </form>
    </div>
</div>

<div style="margin-top:10px">
    <a asp-controller="AdministratorToDoList" asp-action="DoList" class="edit">返回待辦事項清單</a>
</div>
