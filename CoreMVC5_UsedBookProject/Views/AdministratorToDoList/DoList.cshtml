@using CoreMVC5_UsedBookProject.ViewModels;
@model IEnumerable<ToDoListViewModels>
@{
    ViewData["Title"] = "待辦清單";
}
<link href="~/css/datachange.css" rel="stylesheet" />


<div style="display:flex;">
    </div>
    <div class="content" style="width:100VW;">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr style="text-align:center;">
                    <th colspan="5" class="text-center btn-info">待辦清單</th>
                </tr>
                <tr style="text-align:center;">
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Date)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Maintitle)</th>
                    <th>資料變更</th>
                    <th>完成度</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center; width:778px;height:40px;">
                        <td class="1">@item.Date</td>
                        <td class ="2">@item.Maintitle</td>
                        <td style="overflow:hidden; display:flex; flex-wrap:wrap; justify-content:space-evenly; gap:5px;">
                            <a href="/AdministratorToDoList/DoListDetail?id=@item.Id" class="btnadmin" style="width:140px;height:40px;background-color:#007bff;text-decoration:none;color:white;">詳細資料</a>
                            <a href="/AdministratorToDoList/DoListSuspension?id=@item.Id" class="btnadmin" style="width:140px;height:40px;background-color:#FFA500;text-decoration:none;color:white;">確認完成</a>
                        </td>

                        <td>@item.RoleName</td>
                    </tr>
                }
            </tbody>
        </table>
</div>