@model CoreMVC5_UsedBookProject.ViewModels.ToDoListViewModels

@{
    ViewData["Title"] = "待辦事項編輯";
}
<style>
    .return {
        padding: 10px;
        text-decoration: none;
        color: white;
        background-color: blue;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
    }

        .return:hover {
            text-decoration: none;
            color: blue;
            background-color: white;
            border: 1px blue solid;
        }
</style>
<h1>待辦事項編輯</h1>

<h4>待辦事項清單</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoListEdit" style="width:1200px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:flex; flex-direction:column;  gap:10px;">
                <div style="display:flex; display:none;" >
                    <label asp-for="Id" class="control-label" style="width:10%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="Date" class="control-label" style="width:10%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="Maintitle" class="control-label" style="width:10%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Maintitle" class="form-control" />
                    <span asp-validation-for="Maintitle" class="text-danger"></span>
                </div>
                <div style="display:flex;">
                    <label asp-for="Subtitle" class="control-label" style="width:10%; text-align:center; font-weight:bold; font-size:25px;"></label>
                    <input asp-for="Subtitle" class="form-control"/>
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="保存" class="return" />
                </div>
            </div>
        </form>
    </div>
</div>

<div style="margin-top:10px">
    <a asp-controller="AdministratorToDoList" asp-action="DolistForCheck" class="return">回待辦事項審核</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
