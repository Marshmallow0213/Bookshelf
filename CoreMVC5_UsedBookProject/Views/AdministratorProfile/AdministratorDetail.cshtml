@model AdministratorUser
@{
    ViewData["Title"] = "管理員個人資料明細";
}
<style>
    .return {
        padding: 10px;
        text-decoration: none;
        color: white;
        background-color: blue;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
    }

        .return:hover {
            text-decoration: none;
            color: blue;
            background-color: white;
            border: 1px blue solid;
        }

    .edit {
        padding: 10px;
        text-decoration: none;
        color: white;
        background-color: #66cdaa;
        transition: 0.7s;
        border-radius: 5px;
        border: 0;
    }

    .edit:hover {
            text-decoration: none;
            color: #66cdaa;
            background-color: white;
            border: 1px #66cdaa solid;
        }
</style>
<h4 class="alert alert-danger">管理員個人資料明細</h4>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        @{
            string email = User.Identity.Name;
            string[] segmentation = email.Split('@');
            string username = segmentation[0];
        }
        <dd class="col-sm-9">@Html.DisplayFor(model => username)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Nickname)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Nickname)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.PhoneNo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.PhoneNo)</dd>
    </dl>
</div>
<div>
    <a asp-action="AdministratorEdit" asp-route-id="@Model.Id" class="edit">編輯</a>|
    <a asp-controller="AdministratorProfile" asp-action="AdministratorData" class="return">返回管理員資料列表</a>
</div>