<div style="display:flex;">
    <div style="width: 35%;">
    </div>
        <div class="content">
        <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr style="text-align:center;">
                            <th colspan="4" class="text-center btn-info">管理員資料列表</th>
                        </tr>
                <tr style="text-align:center;">
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().UserID)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().UserName)</th>
                            <th>資料變更</th>
                            <th>當前權限</th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center; width:778px;height:40px;">
                        @{
                            string name = item.UserName.ToString();
                            int atIndex = name.IndexOf('@');
                            string firstName = name.Substring(0, atIndex);
                        }
                        <td>@item.UserID</td>
                        <td>@firstName</td>
                        <td style="overflow:hidden; display:flex; flex-wrap:wrap; justify-content:space-evenly; gap:5px;">
                            <a asp-action="AdministratorEdit" asp-route-id="@item.UserID" class="btnadmin" style="width:100px;height:40px;background-color:blue; text-decoration:none; color:white;">編輯</a>
                            <a asp-action="AdministratorDetail" asp-route-id="@item.UserID" class="btnadmin" style="width:140px;height:40px;background-color:#2e8b57;text-decoration:none;color:white;">詳細資料</a>
                            <a asp-action="AdministratorDelete" asp-route-id="@item.UserID" class="btnadmin" style="width:100px;height:40px;background-color:red;text-decoration:none;color:white;">刪除</a>
                            <a asp-action="AdministratorSuspension" asp-route-id="@item.UserID" class="btnadmin" style="width:140px;height:40px;background-color:gray;text-decoration:none;color:white;">權限管理</a>
                        </td>
                        <td>@item.RoleName</td>
                    </tr>
                }
                    </tbody>
            <a asp-action="AdministratorCreate" class="btn btn-warning createtext table">新增管理員</a>
        </table>
                
         </div>
</div>