@model CoreMVC5_UsedBookProject.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "管理員登入";
}
<style>
    .list {
        color:black;
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        background-color: white;
    }

</style>
<div class="login-bg">
    <img src="~/adminimg/loginbg.jpg" />
</div>
    <div class="login-container list">
        <h1>管理員登入</h1>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="帳號" />
                <span asp-validation-for="UserName" class="text-danger" style="border-radius:5px;"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="密碼" />
            <span asp-validation-for="Password" class="text-danger" style="border-radius:5px;"></span>
            </div>
            <hr>
            <div class="form-group">
            <input type="submit" value="登入" class="btn btn-primary btn-login-view btn-login" />
            </div>
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error-message">@ViewBag.ErrorMessage</div>
        }
        <hr />
        <div class="back-to-home">
            <a asp-action="Index" asp-controller="Home">回主頁面</a>
        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


