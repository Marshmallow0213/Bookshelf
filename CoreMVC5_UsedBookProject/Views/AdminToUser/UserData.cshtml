@model IEnumerable<CoreMVC5_UsedBookProject.Models.User>
@{
    ViewData["Title"] = "管理人員控管";
    Layout = "_LayoutAdminToUser";
}
<div class="sidebar">
    <ul class="menu">
        <li class="menu-item">
            <a asp-controller="Administratorlist" asp-action="Adminlist" class="navtext">管理員人員名單</a>
        </li>
        <li class="menu-item">
            <a asp-controller="AdministratorProfile" asp-action="AdministratorData" class="navtext">管理人員控管</a>
        </li>
        <li class="menu-item">
            <a asp-controller="AdminToUserController" asp-action="UserData" class="navtext" style="background-color: white; color:black;">使用者控管</a>
        </li>
        <li class="menu-item">
            <a asp-controller="AdminCharts" asp-action="ChartsView" class="navtext">管理員與使用者占比</a>
        </li>
        <li class="menu-item">
            <a asp-controller="GetCpu" asp-action="CPUView" class="navtext">當前CPU與記憶體使用率</a>
        </li>
        <li class="menu-item">
            <a asp-controller="AdministratorHomePage" asp-action="AdminIndex" class="navtext">主頁面更新</a>
        </li>
    </ul>
</div>

<div style="display:flex;">
    <div style="width: 30%; padding: 30%;">
    </div>
    <div class="content">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th colspan="3" class="text-center btn-info">使用者資料列表</th>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>資料變更</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Name</td>
                        <td>
                            <a asp-action="UserEdit" asp-route-id="@m.Id" class="btn btn-info">編輯</a>
                            <a asp-action="UserDetail" asp-route-id="@m.Id" class="btn btn-primary">詳細資料</a>
                            <a asp-action="UserDelete" asp-route-id="@m.Id" class="btn btn-danger">刪除</a>
                            <a asp-action="UserSuspension" asp-route-id="@m.Id" class="btn btn-info">權限管理</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>